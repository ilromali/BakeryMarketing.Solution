@{
    Layout ="_Layout";
}

@model Bakery.Models.Sweet

<h2>Add a Flavor to a Corresponding Sweet: @Html.DisplayFor(model => model.SweetName)</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.SweetId)
    <div class="form-group">
        @Html.Label("Select Flavor:")
        @Html.DropDownList("FlavorId", "- none -")
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary">
    </div>
}

<h3>@Html.ActionLink("Back to sweet details", "Details", new { id = Model.SweetId })</h3>