@{
    Layout = "_Layout";
}

@using Bakery.Models

<h1>Welcome to Pierre's Bakery!</h1>
<div class="container">
    <hr />
    <div class="container"></div>
        <div id="homeCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#homeCarousel" data-slide-to="1"></li>
                <li data-target="#homeCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img id="item1" class="d-block w-100 center-block" src="~/img/display-corner-bread.jpg" alt="First slide of bread in a kitchen">
                </div>
                <div class="carousel-item">
                <img id="item2" class="d-block w-100 center-block" src="~/img/horizontal_croissants.jpg"  alt="Second slide of fresh baked croissants">
                </div>
                <div class="carousel-item">
                <img id="item3" class="d-block w-100 center-block" src="~/img/loaves.jpg" alt="Third slide of bread loaves">
            </div>
        </div>
            <a class="carousel-control-prev" href="#homeCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#homeCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        @*Begin card lists*@
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-title">
                        <h3>@Html.ActionLink("Flavors Home", "Index", "Flavors")</h3>
                    </div>
                    <div class="card-body">
                        <ul>
                        @{
                            List<Flavor>flavorsList = ViewBag.Flavors;
                            @if(flavorsList.Count() == 0)
                            {
                                <h3>There are no flavors yet</h3>
                            }
                            @foreach(Flavor flavor in ViewBag.Flavors)
                            {
                                <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", "Flavors", new { id = flavor.FlavorId })</li>
                            }
                        }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-title">
                        <h3>@Html.ActionLink("Sweets Home", "Index", "Sweets")</h3>
                    </div>
                    <div class="card-body">
                        <ul>
                            @{
                                List<Sweet>sweetsList = ViewBag.Sweets;
                                @if(sweetsList.Count() == 0)
                                {
                                    <h3>There are no listed sweets yet.</h3>
                                }
                                @foreach(Sweet sweet in ViewBag.Sweets)
                                {
                                    <li>@Html.ActionLink($"{sweet.SweetName}", "Details", "Sweets", new { id = sweet.SweetId })</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>